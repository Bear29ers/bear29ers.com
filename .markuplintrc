{
  "specs": {
    ".[jt]sx$": "@markuplint/react-spec"
  },
  "parser": {
    ".[jt]sx$": "@markuplint/jsx-parser"
  },
  "extends": [
    "markuplint:recommended"
  ],
  "rules": {
    "ineffective-attr": false,
    "no-hard-code-id": false,
    "attr-duplication": false,
    "invalid-attr": {
       "options": {
          "allowAttrs": ["transform", "gradientTransform"]
        }
     }
     "heading-levels": false,
  },
}
